<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://logging.apache.org/log4php/"	>

  <appender name="config.log" class="LoggerAppenderRollingFile">
    <param name="file" value="/var/log/log4php.txt"/>

    <param name="maxFileSize" value="10MB"/>
    <param name="maxBackupIndex" value="20"/>
    <param name="compress" value="false"/>
    <layout class="LoggerLayoutPattern">
      <param name="conversionPattern" value="%date{Y-m-d H:i:s,u} %p %C.%M:%L - %m%n" />
    </layout>
  </appender>

  <root>
    <level value="DEBUG"/>
    <appender-ref ref="config.log"/>
  </root>
</configuration>